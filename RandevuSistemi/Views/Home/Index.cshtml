@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container home-content">
    @if (TempData["appointmentSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i>
            <strong>@TempData["appointmentSuccess"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="d-flex justify-content-center content-div">
        <a href="@Url.Action("MakeAnAppointment", "Appointment")" class="randevu">
            <i class="fas fa-calendar-plus"></i>
            <h4>Randevu Al</h4>
        </a>
        <a href="@Url.Action("Appointments", "Appointment")" class="randevu">
            <i class="fas fa-calendar-check"></i>
            <h4>Randevularım</h4>
        </a>
    </div>
</div>

