<body>
    <input type="checkbox" id="check" checked>
    <!-- Main div start -->
    <div id="container">
        <header class="top-header">
            <label for="check">
                <i class="fas fa-bars" id="sidebar_btn"></i>
            </label>
            <h3><a href="@Url.Action("Index","Admin")">ADMİN PANEL</a></h3>
            <div class="right-div">
                <p>Hoşgeldin admin</p>
                <a href="@Url.Action("Logout","Admin")"><i class="fas fa-sign-out-alt"></i><span style="font-size:17px;padding-left:4px;vertical-align:text-top">Çıkış</span></a>
            </div>
        </header>

        <div class="sidebar-menu">
            <div class="sidebar">
                <a href="@Url.Action("Index","Admin")"><i class="fas fa-desktop"></i><span>Gösterge Paneli</span></a>
                <a href="#"><i class="fas fa-cogs"></i><span>Components</span></a>
                <a href="#"><i class="fas fa-table"></i><span>Tables</span></a>
                <a href="#"><i class="fas fa-th"></i><span>Forms</span></a>
                <a href="@Url.Action("Info","Admin")"><i class="fas fa-info-circle"></i><span>Hakkımızda</span></a>
                <a href="@Url.Action("Settings","Admin")"><i class="fas fa-sliders-h"></i><span>Ayarlar</span></a>
            </div>

        </div>

        <div class="content">
            @RenderBody()
        </div>

    </div>
    <!-- Main div end -->
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
