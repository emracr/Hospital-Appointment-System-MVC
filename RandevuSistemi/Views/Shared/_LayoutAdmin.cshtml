    <link rel="icon" type="image/png" href="../../Files/favicon.png" />
    <link href="/Content/AdminMain.css" rel="stylesheet" type="text/css">
    <link href="/Content/AdminIndex.css" rel="stylesheet" type="text/css">
    <link href="/Content/AdminUsersData.css" rel="stylesheet" type="text/css">
    <link href="/Content/AdminDoctorsData.css" rel="stylesheet" type="text/css">
    <link href="/Content/AdminPoliclinicData.css" rel="stylesheet" type="text/css">
    <link href="/Content/AdminAppointmentsData.css" rel="stylesheet" type="text/css">
